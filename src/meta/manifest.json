{
  "description": "Bookmark with footprint",
  "manifest_version": 2,
  "name": "Footprint",
  "version": "0.0.10",
  "icons": {
    "64": "icon/64.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "64": "icon/64.png"
    },
    "default_title": "Footprint",
    "default_popup": "html/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "permissions": [
    "<all_urls>",
    "contextMenus",
    "notifications",
    "storage",
    "tabs",
    "unlimitedStorage"
  ],
  "applications": {
    "gecko": {
      "id": "footprint@snca.net",
      "strict_min_version": "57.0"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';"
}
