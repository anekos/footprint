{
  "description": "Bookmark with footprint",
  "manifest_version": 2,
  "name": "Footprint",
  "version": "0.0.5",
  "background": {
    "scripts": [
      "lib/footprint.js",
      "background/main.js"
    ]
  },
  "icons": {
    "64": "icons/64.png"
  },
  "browser_action": {
    "default_icon": {
      "64": "icons/64.png"
    },
    "default_title": "Footprint",
    "default_popup": "popup/main.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "lib/footprint.js",
        "content/stalker.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "options_ui": {
    "page": "view/option.html"
  },
  "permissions": [
    "<all_urls>",
    "contextMenus",
    "notifications",
    "storage",
    "tabs",
    "unlimitedStorage"
  ],
  "applications": {
    "gecko": {
      "id": "footprint@snca.net",
      "strict_min_version": "57.0"
    }
  }
}
